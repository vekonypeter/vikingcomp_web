@model VikingCompASP_Domain.Entities.Order

@{

}

<div class="container body-content">

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-12">
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Info:</strong> @ViewBag.Message
        </div>
    }

    <div class="row">
        <div class="col-md-12 col-admin-outer">
            <div class="col-admin-inner">

                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.UserId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UserId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.ProductId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProductId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Date)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Paid)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Paid)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Completed)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Completed)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "OrderEdit", new { id = Model.Id }) |
        @Html.ActionLink("Back to order management", "OrderIndex")
    </p>
</div>